#!/bin/bash
if [ -e /sys/class/power_supply/BAT0/capacity ]; then
    while true; do
        bat="$(cat /sys/class/power_supply/BAT0/capacity)"
        if [[ "$bat" -ge 100 ]]; then
            showbat="$bat"
        elif [[ "$bat" -lt 10 ]]; then
            showbat="00$bat"
        else
            showbat="0$bat"
        fi

        xsetroot -name " $(/bin/date "+%y%m%d %H%M%S") $showbat "
        sleep 1s
    done &
else
    while true; do
        xsetroot -name " $(/bin/date "+%y%m%d %H%M%S") "
        sleep 1s
    done &
fi
